<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="4dp">

    <!-- MAP -->
    <org.maplibre.android.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/rightPanel" />

    <!-- RIGHT PANEL (wraps two boxes like screenshot) -->
    <LinearLayout
        android:id="@+id/rightPanel"
        android:orientation="vertical"
        android:layout_width="280dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- TOP INFO BOX -->
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/panel_top_box"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:gravity="center">

            <ImageView
                android:src="@drawable/ic_flag_checkered"
                android:layout_width="56dp"
                android:layout_height="56dp" />

            <TextView
                android:id="@+id/txtDistance"
                android:text="-- Km"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtEta"
                android:text="-- minutos"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <!-- LANE PREVIEW BOX -->
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/panel_lane_box"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:gravity="center">

            <!-- Lane View TODO -->
            <!--<ImageView
                android:id="@+id/lanePreview"
                android:src="@drawable/ic_lane_preview"
                android:layout_width="140dp"
                android:layout_height="180dp"
                android:adjustViewBounds="true" />-->

        </LinearLayout>

        <!-- SPEED AREA -->
        <LinearLayout
            android:id="@+id/speedArea"
            android:orientation="horizontal"
            android:background="@drawable/panel_bottom_speed"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/txtSpeedLimit"
                android:background="@drawable/speed_limit_circle"
                android:text="50"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="20sp"
                android:layout_width="56dp"
                android:layout_height="56dp" />

            <TextView
                android:id="@+id/txtCurrentSpeed"
                android:text="12 Km/h"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:layout_marginStart="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

    <!-- WEATHER BADGE -->
    <LinearLayout
        android:id="@+id/weatherBadge"
        android:orientation="horizontal"
        android:background="@drawable/weather_bg"
        android:padding="8dp"
        android:layout_margin="12dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/weatherIcon"
            android:src="@drawable/ic_weather_rain"
            android:layout_width="36dp"
            android:layout_height="36dp" />

        <TextView
            android:id="@+id/txtTemperature"
            android:text="11ยบ"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginStart="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!-- SETTINGS BUTTON -->
    <ImageView
        android:id="@+id/btnSettings"
        android:src="@drawable/ic_settings"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>



